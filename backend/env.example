# EcoWasteGo Production Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED - Core Configuration
# =============================================================================
NODE_ENV=production
PORT=3000

# =============================================================================
# REQUIRED - Supabase Configuration
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# REQUIRED - Database Configuration
# =============================================================================
DB_HOST=db.your-project.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-database-password

# =============================================================================
# REQUIRED - API Security
# =============================================================================
API_KEY=your-secure-api-key-here
JWT_SECRET=your-very-long-jwt-secret-here

# =============================================================================
# REQUIRED - Frontend URLs
# =============================================================================
FRONTEND_URL=https://ecowastego.com
MOBILE_APP_URL=https://ecowastego.com

# =============================================================================
# REQUIRED - Google Maps API
# =============================================================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# =============================================================================
# REQUIRED - Email Configuration
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# =============================================================================
# OPTIONAL - Advanced Security
# =============================================================================
# Enable additional security features
ENABLE_2FA=true
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true
ENABLE_CSRF_PROTECTION=true

# =============================================================================
# OPTIONAL - Monitoring & Logging
# =============================================================================
LOG_LEVEL=warn
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# OPTIONAL - Redis Configuration (for production CSRF tokens)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# OPTIONAL - SSL/TLS Configuration
# =============================================================================
SSL_KEY_PATH=/path/to/private-key.pem
SSL_CERT_PATH=/path/to/certificate.pem
SSL_CA_PATH=/path/to/ca-bundle.pem

# =============================================================================
# OPTIONAL - Backup Configuration
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# =============================================================================
# OPTIONAL - Third-party Integrations
# =============================================================================
PAYMENT_GATEWAY_API_KEY=your-payment-gateway-key
PUSH_NOTIFICATION_KEY=your-push-notification-key

# =============================================================================
# mNotify SMS Service Configuration
# =============================================================================
MNOTIFY_API_KEY=your-mnotify-api-key
MNOTIFY_API_BASE_URL=https://api.mnotify.com/api/sms
MNOTIFY_SENDER_ID=EcoWasteGo
SMS_VERIFICATION_ENABLED=true
