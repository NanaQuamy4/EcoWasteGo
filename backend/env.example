# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Google Maps API Configuration
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Email Configuration (for password reset, verification, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_app_password
EMAIL_FROM=noreply@ecowastego.com

# Payment Configuration (if using payment gateways)
PAYMENT_GATEWAY_API_KEY=your_payment_gateway_key
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret

# File Upload Configuration (if using cloud storage)
CLOUD_STORAGE_BUCKET=your_storage_bucket
CLOUD_STORAGE_KEY=your_storage_key
CLOUD_STORAGE_SECRET=your_storage_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8081

# Logging
LOG_LEVEL=info 